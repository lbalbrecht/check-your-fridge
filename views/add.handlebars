    <!-- add form -->
    <div class="row">
        <form class="col s12">

            <div class="row">
                <div class="input-field col s12">
                    <input id="name" type="text" name="name">
                    <label for="name">Ingredient Name</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s12">
                    <input id="expiration" type="text" class="datepicker" name="expiration">
                    <label for="expiration">Expiration Date</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s12">
                    <select name="category" id="category">
                        <option value="" disabled selected>choose a category</option>
                        <option value="bread & bakery">bread & bakery</option>
                        <option value="beverages">beverages</option>
                        <option value="canned goods">canned goods</option>
                        <option value="condiments & spices">condiments & spices</option>
                        <option value="dairy">dairy</option>
                        <option value="frozen foods">frozen foods</option>
                        <option value="meat & seafood">meat & seafood</option>
                        <option value="produce">produce</option>
                        <option value="snacks">snacks</option>
                        <option value="other">other</option>
                    </select>
                    <label>Category</label>
                </div>
            </div>


            <button class="btn waves-effect waves-light right" id="addIngredient" type="submit" name="action">Submit
                <i class="material-icons right">send</i>
            </button>

        </form>
    </div>
