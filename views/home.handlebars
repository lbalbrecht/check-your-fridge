                <span class="letter" style="color:#228B22">E</span>
                <span class="letter" style="color:#FFA500">R</span>
                <span class="letter" style="color:#FF0000">I</span>
                <span class="letter" style="color:#9932CC">E</span>
                <span class="letter" style="color:#00BFFF">S</span>
            </div>
        </div>

        <div class="container center">
            <div class="row">
                <div class="col s12 container center">
                    <div class="catSection categories center">
                        <button class="categoryBtn btn waves-effect waves-light">all</button>
                        <button class="categoryBtn btn waves-effect waves-light">bread</button>
                        <button class="categoryBtn btn waves-effect waves-light">beverages</button>
                        <button class="categoryBtn btn waves-effect waves-light">canned-goods</button>
                        <button class="categoryBtn btn waves-effect waves-light ">condiments-spices</button>
                    </div>
                    <br>
                    <div class="catSection categories center">
                        <button class="categoryBtn btn waves-effect waves-light">frozen-foods</button>
                        <button class="categoryBtn btn waves-effect waves-light">meat-seafood</button>
                        <button class="categoryBtn btn waves-effect waves-light">produce</button>
                        <button class="categoryBtn btn waves-effect waves-light">snacks</button>
                        <button class="categoryBtn btn waves-effect waves-light">dairy</button>
                        <button class="categoryBtn btn waves-effect waves-light">other</button>
                    </div>
                </div>
            </div>
            {{!-- <h3 class="center">My Groceries</h3> --}}
            <div class="row ing-container">
                {{#each ingredients}}
                {{#if isMine}}
                <div class="col s10 m4 l3">
                    {{!-- addtl card style --}}
                    <div class="card {{category}}">
                        <div class="card-content">
                            <span class="card-title activator grey-text text-darken-4">{{name}}</span>
                            <label>
                                <input type="checkbox" value={{name}} name="food" />
                                <span>Click to add to search!</span>
                            </label>
                        </div>
                        <div class="card-content">
                            <p>Exp:</p>
                            <span class="card-title activator grey-text text-darken-4">{{expiration}}<i
                                    class="material-icons right">more_vert</i></span>
                        </div>
                        <div class="card-reveal">
                            <span class="card-title grey-text text-darken-4">{{name}}<i
                                    class="material-icons right">close</i></span>
                            <p>{{category}}</p>
                            <div class="card-action btn-card">
                                <button class="update btn waves-effect waves-light btn-flat" data-id="{{this.id}}"><i
                                        class="material-icons">create</i></button>
                                <button class="delete btn waves-effect waves-light btn-flat" data-id="{{this.id}}"><i
                                        class="material-icons">delete</i></button>
                            </div>
                        </div>
                    </div>
                </div>
                {{/if}}
                {{/each}}
            </div>

        </div>




    </div>
