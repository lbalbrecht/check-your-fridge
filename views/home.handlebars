<!-- list of categories -->
{{#if user}}

<div class="row groceries center">

    <div class="col s12 right">
        {{!-- list of ingredients that user added --}}
        <div class="row">
            <span class="letter" style="color:#FF0000">M</span>
            <span class="letter" style="color:#228B22">Y</span>
            <span class="letter" style="color:#9932CC">-</span>
            <span class="letter" style="color:#FFFF00">G</span>
            <span class="letter" style="color:#FFA500">R</span>
            <span class="letter" style="color:#00BFFF">O</span>
            <span class="letter" style="color:#FF0000">C</span>
            <span class="letter" style="color:#228B22">E</span>
            <span class="letter" style="color:#FFA500">R</span>
            <span class="letter" style="color:#FF0000">I</span>
            <span class="letter" style="color:#9932CC">E</span>
            <span class="letter" style="color:#00BFFF">S</span>
        </div>
    </div>

    <div class="container center">
        <div class="row">
            <div class="col s12 container center">
                <div class="catSection categories center">
                    <button class="CategoryBtn waves-effect waves-light purple accent-4 btn all center">all</button>
                    <button class="categoryBtn btn waves-effect waves-light purple accent-4 bread">bread</button>
                    <button class="categoryBtn btn waves-effect waves-light purple accent-4 beverages">beverages</button>
                    <button class="categoryBtn btn waves-effect waves-light purple accent-4 canned-goods">canned-goods</button>
                    <button class="categoryBtn btn waves-effect waves-light purple accent-4 condiments-spices">condiments-spices</button>
                    <button class="categoryBtn btn waves-effect waves-light purple accent-4 frozen-foods">frozen-foods</button>
                    <button class="categoryBtn btn waves-effect waves-light purple accent-4 meat-seafood">meat-seafood</button>
                    <button class="categoryBtn btn waves-effect waves-light purple accent-4 produce">produce</button>
                    <button class="categoryBtn btn waves-effect waves-light purple accent-4 snacks">snacks</button>
                    <button class="categoryBtn btn waves-effect waves-light purple accent-4 dairy">dairy</button>
                    <button class="categoryBtn btn waves-effect waves-light purple accent-4 other">other</button>
                </div>
            </div>
        </div>
        {{!-- <h3 class="center">My Groceries</h3> --}}
        <div class="row ing-container">
            {{#each ingredients}}
            {{#if isMine}}
            <div class="col s12 m4 l3">
                <div class="card purple accent-4 {{category}}">
                    <div class="card-content white-text">
                        <p class="card-title">{{name}}</p>
                        <p class="light-text">{{category}}</p>
                        <p class="right">exp: {{expiration}}</p>
                    </div>
                    <div class="card-action btn-card">
                        <button class="update btn waves-effect waves-light btn-flat" data-id="{{this.id}}"><i
                                class="material-icons">create</i></button>
                        <button class="delete btn waves-effect waves-light btn-flat" data-id="{{this.id}}"><i
                                class="material-icons">delete</i></button>
                    </div>
                </div>
            </div>
            {{/if}}
            {{/each}}
        </div>

    </div>




</div>
<div class="row groceries">
    <div class="col s12">
        <div class="center">
            <span class="letter" style="color:#9932CC">R</span>
            <span class="letter" style="color:#FFFF00">E</span>
            <span class="letter" style="color:#FF0000">C</span>
            <span class="letter" style="color:#228B22">I</span>
            <span class="letter" style="color:#00BFFF">P</span>
            <span class="letter" style="color:#9932CC">E</span>
            <span class="letter" style="color:#FFA500">S</span>
        </div>
        <div id="recBtn" class="center">
            <button id="search" class="btn waves-effect waves-light purple accent-4">Search</button>
        </div>

        <div class="col s12 right">
            {{!-- list of ingredients that user added --}}
            {{!-- <h3 class="center">Recipes:</h3> --}}
            <div class="row">
                <div class="col s1"></div>
                <div class="col s10">

                    <div id="recipeCard" class="card purple accent-4">
                        <div class="card-action">
                            <p id="recipeTitle" class="card-title">Recipe Title</p>
                            <p id="recipeUrl" class="light-text">URL</p>
                            <p id="recipeSum"></p>
                            <p id="recipeInst"></p>
                            <ul id="ingredientList">
                                <li class="recipeIngr">Ingredients</li>
                            </ul>

                            <button id="save" class="delete btn waves-effect waves-light btn-flat">
                                <i class="material-icons">save</i></button>

                        </div>
                    </div>

                </div>
                <div class="col s1"></div>
            </div>

        </div>
    </div>
</div>

<footer>
    <div class="row container center">
        <div class="col s12">
            <p>&copy;CheckItOut</p>
        </div>
    </div>

</footer>
{{/if}}